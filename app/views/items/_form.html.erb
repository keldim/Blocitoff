<%= form_for :item, :url => user_items_path(current_user) do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', placeholder: "Enter an item" %>
</div>


<div class="form-group">
  <%= f.submit "Create", class: 'btn btn-success' %>
</div>
<% end %>
